<Window x:Class="MyAwesomeAlarm.AlarmListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAwesomeAlarm"
        mc:Ignorable="d"
        Title="AlarmListWindow" Height="450" Width="800">
  <Grid>
    <DataGrid ItemsSource="{Binding Alarms}" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="181" Margin="10,10,0,0" VerticalAlignment="Top" Width="704">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Hour" Binding="{Binding Hours}" IsReadOnly="False" Width="90" />
        <DataGridTextColumn Header="Minute" Binding="{Binding Minutes}" IsReadOnly="False" Width="80" />
        <DataGridTextColumn Header="Days" Binding="{Binding Days}" IsReadOnly="False" Width="50" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Window>
